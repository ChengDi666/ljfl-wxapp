.weui-flex{
  /* display: flex;  justify-content: space-around;  flex-direction: row;  flex-wrap: wrap; width: 100%; */
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.weui-flex__item{
  /* width: 50%; border: 1px solid orange; border-radius: 20rpx; */
  flex: 1;
  width: 46%;
  min-width: 46%; 
  max-width: 46%;
  margin: 0 2%;
  border-bottom: 1px solid #EDEDED;
}

view{
  font-size: 14px;
}

.weui-cell{
  padding: 12px 8px;
}

.weui-cells{
  margin-top: 0px;

}

.weui-cells:after,.weui-cells:before {
  display: none;
}

.weui-cell_select .texts-right{
  text-align: right;
  padding-right: 40px;
}

.weui-cell_select .weui-cell__bd:after{
  -webkit-mask-image: url(data:image/png;base64,);
  margin-top: -9px;
  width: 20px;
  height: 20px;
  

}

.weui-cell_select-after{
  border-bottom: 1px solid #EDEDED;
  padding: 0 8px;
}